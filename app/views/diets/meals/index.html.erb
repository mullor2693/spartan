<h1>Meals</h1>

<%= link_to 'Back', diet_path(@diet) %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Daytime</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meals.each do |meal| %>
      <tr>
        <td><%= meal.name %></td>
        <td><%= meal.name_daytime %></td>
        <td><%= link_to 'Show', [@diet, meal] %></td>
        <td><%= link_to 'Edit', edit_diet_meal_path(@diet, meal) %></td>
        <td><%= link_to 'Destroy', [@diet, meal], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Meal', new_diet_meal_path(@diet) %>
