<h1 class="uk-heading-divider"><%= link_to "", authenticated_root_path, :"uk-icon" => "chevron-left", class: "uk-icon" %> Perfil</h1>

<% if @current_user.avatar.attached? %>
<p>
    <%= image_tag @current_user.avatar.variant(resize: "40x40!") %>
</p>
<% end %>

<p>
  <strong>Nombre:</strong>
  <%= @current_user.full_name %>
</p>

<p>
  <strong>Sexo:</strong>
  <%= @current_user.sex %>
</p>

<p>
  <strong>Fecha de nacimineto:</strong>
  <%= @current_user.birth_date %>
</p>

<p>
  <strong>Altura:</strong>
  <%= @current_user.height %>
</p>

<p>
  <strong>Peso:</strong>
  <%= @current_user.birth_date %>
</p>

<!-- Change password -->
<%= form_for(@current_user, as: @current_user, url: edit_diet_path(@current_user), html: { method: :put }) do |f| %>
  <%= render "users/shared/error_messages", resource: @current_user %>

  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>


<!-- Change email -->
<%= form_for(@current_user, as: @current_user, url: edit_diet_path(@current_user), html: { method: :put }) do |f| %>
  <%= render "users/shared/error_messages", resource: @current_user %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

