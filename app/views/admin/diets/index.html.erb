<h1 class="uk-heading-divider"><%= link_to "", admin_nutrition_path, :"uk-icon" => "chevron-left", class: "uk-icon" %> Dietas <%= link_to 'Nueva Dieta', new_admin_diet_path, class:"uk-button uk-button-default uk-align-right" %></h1>

<div>
  <div class="uk-width-expand@s">

    <div uk-filter="target: .js-filter">
      <div class="sticky-options uk-margin-small-left" uk-sticky="offset: 134">
        <ul class="uk-subnav uk-subnav-pill uk-margin-remove-left@s">
          <li class="uk-active" uk-filter-control><a href="#">Todas</a></li>
          <li uk-filter-control="[data-owner='owned']"><a href="#">Propias</a></li>
          <li uk-filter-control="[data-owner='other']"><a href="#">Otros</a></li>
        </ul>
      </div>
      <ul class="js-filter uk-child-width-1-1 uk-child-width-1-2@s uk-child-width-1-3@l uk-child-width-1-4@xl uk-text-center uk-margin-medium-top" uk-grid>
        <% @diets.each do |diet| %>
          <li data-owner="<%= diet.user == current_user ? "owned" : "other" %>">
          <%= link_to [:admin, diet], class: "uk-link-reset" do %>
            <div class="uk-card <%= diet.user == current_user ? "uk-card-secondary" : "uk-card-default" %> user-list-card">
              <div class="uk-card-header">
                <div class="uk-grid-small uk-flex-middle" uk-grid>
                  <div class="uk-width-expand">
                    <h3 class="uk-card-title uk-margin-remove-bottom"><%= diet.name %></h3>
                    <p class="uk-text-meta uk-margin-small-top">Dias: <%= diet.weekdays_sentence %></p>
                  </div>
                </div>
              </div>
              <div class="uk-card-footer">
                <%= remote_link(edit_admin_diet_path(diet), "Editar", {class: "uk-button uk-button-text"}) %>
              </div>
            </div>
            <%end%>
          </li>
        <%end%>
      </ul>
    </div>
    
  </div>
</div>