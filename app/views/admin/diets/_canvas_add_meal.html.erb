<div id="canvas-admin-diet-add-meal" uk-offcanvas="flip: true; overlay: true">
    <div class="uk-offcanvas-bar edition-canvas">

        <button class="uk-offcanvas-close" type="button" uk-close></button>

        <h3>Añadir Comida</h3>

        <%= form_with(model: [:admin, @diet], local: true) do |form| %>
          <%= form.fields_for :meals, @diet.meals.build do |m_fields| %>
            <div class="uk-margin">
              <%= m_fields.text_field :name, list: "meals_autocomplete", class: "uk-input" %>
              <datalist id="meals_autocomplete">
                <% Meal.all.each do |meal| %>
                  <option value="<%= meal.name %>">
                <% end %>
              </datalist>
            </div>
            <div class="uk-margin">
              <%= form.collection_select(:daytime, Daytimeable::DAYTIMES.collect.with_index.to_a, :second, :first.to_s, {include_blank: ''},{ class: "uk-select"}) %>
            </div>
          <% end %>    
          <div class="uk-margin">
            <%= form.submit "Añadir Comida", class:"uk-button uk-button-default" %>
          </div>
        <% end %>

    </div>
</div>