<h1 class="uk-heading-divider"><%= link_to "", admin_diets_path, :"uk-icon" => "chevron-left", class: "uk-icon" %> <%= @diet.name %><%= remote_link(edit_admin_diet_path(@diet), "Editar Dieta", {class: "uk-button uk-button-default uk-align-right"}) %></h1>

<div class="uk-width-1-1 uk-margin-medium" uk-grid>

    <div class="uk-width-auto uk-width-1-2@s uk-width-1-3@l">
      <div class="uk-card uk-card uk-card-secondary uk-card-body uk-text-center">
        <h3><%= @diet.name %></h3>
        <p><%= @diet.description %></p>
        <p>
          <strong>Dias aplicados:</strong>
          <%= @diet.weekdays_sentence %>
        </p>
      </div>
    </div>

    <div class="uk-width-1-1 uk-width-1-2@s uk-width-2-3@l">

      <ul class="uk-list uk-list-divider">
        <% @diet.diet_meals.each do |dm| %>
        <li class="uk-flex">
          <div class="uk-width-1-1 uk-width-expand">
            <%= dm.meal.name %>
          </div>
          <div class="uk-width-1-1 uk-width-auto@s uk-margin-small-left">
            <%= dm.meal.name_daytime %>
          </div>
          <div class="uk-width-1-1 uk-width-auto@s uk-margin-left">
            <ul class="uk-iconnav">
              <li><%= link_to '', [:admin, @diet, dm.meal], :'uk-icon' => "icon: file-edit" %></li>
              <li><%= link_to '', [:admin, @diet, dm], method: :delete, data: { confirm: 'Estas seguro?' }, :'uk-icon' => "icon: trash" %></li>
            </ul>
          </div>
        </li>
        <%end%>
      </ul>
    </div>

</div>

