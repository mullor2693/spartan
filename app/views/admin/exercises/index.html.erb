<h1>Exercises</h1>

<table>
  <thead>
    <tr>
      <th>Muestra</th>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exercises.each do |exercise| %>
      <tr>
        <td>
          <% if exercise.examples.attached? %>
            <%= image_tag exercise.examples.first.variant(resize: "40x40!") %>
          <% end %>
        </td>
        <td><%= exercise.name %></td>
        <td><%= exercise.description %></td>
        <td><%= link_to 'Show', [:admin, exercise] %></td>
        <td><%= link_to 'Edit', edit_admin_exercise_path(exercise) %></td>
        <td><%= link_to 'Destroy', [:admin, exercise], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Exercise', new_admin_exercise_path %>
