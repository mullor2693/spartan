<h1>Exercises</h1>

<%= link_to 'Back', admin_authenticated_root_path %>
<%= link_to 'New Exercise', new_admin_exercise_path %>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exercises.each do |exercise| %>
      <tr>
        <td><%= exercise.name %></td>
        <td><%= link_to 'Show', [:admin, exercise] %></td>
        <td><%= link_to 'Edit', edit_admin_exercise_path(exercise) %></td>
        <td><%= link_to 'Destroy', [:admin, exercise], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
