<h1>Workouts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Training days</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @workouts.each do |workout| %>
      <tr>
        <td><%= workout.name %></td>
        <td><%= workout.description %></td>
        <td><%= workout.weekdays_sentence %></td>
        <td><%= workout.user_id %></td>
        <td><%= link_to 'Show', admin_user_workout_path(workout.user, workout) %></td>
        <td><%= link_to 'Edit', edit_admin_user_workout_path(workout.user, workout) %></td>
        <td><%= link_to 'Destroy', admin_user_workout_path(workout.user, workout), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Workout', new_admin_user_workout_path(params[:user_id]) %>
