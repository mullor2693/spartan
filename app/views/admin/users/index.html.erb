<div class="uk-flex uk-flex-wrap uk-flex-wrap-around uk-margin">
  <div class="uk-width-auto@s">
    <h1 class="uk-heading"><%= link_to "", admin_authenticated_root_path, :"uk-icon" => "chevron-left", class: "uk-icon" %> Usuarios</h1>
  </div>
  <div class="uk-width-expand@s">
    <div class="uk-flex uk-flex-right">
      <div>
        <%= search_form_for @q, url: admin_users_path, id: "admin_user_search" do |f| %>
          <div class="uk-search uk-search-default">
            <%= f.search_field :name_or_surname_cont, class: "uk-search-input", placeholder: "Buscar..." %>
          </div>
          <% if !@q.conditions.empty?%>
            <%= link_to "", admin_users_path, class: "uk-button uk-button-default uk-icon", :"uk-icon" => "trash" %>
          <%end%>
          <%= link_to '', "#", onclick:"$('#admin_user_search').submit()", class:"uk-button uk-button-default uk-icon", "uk-icon": "search"  %>
        <% end %>
      </div>
      <div><%= link_to "", new_admin_user_path, class: "uk-button uk-button-default uk-icon uk-margin-small-left", :"uk-icon" => "plus" %></div>
    </div>
  </div>
</div>

<div>
  <div class="uk-width-expand@s">

    <div uk-filter="target: .js-filter">
      <div class="sticky-options uk-margin-small-left" uk-sticky="offset: 134">
        <ul class="uk-subnav uk-subnav-pill uk-margin-remove-left@s">
          <li class="uk-active" uk-filter-control><a href="#">Todos</a></li>
          <li uk-filter-control="[data-role='user']"><a href="#">Usuarios</a></li>
          <li uk-filter-control="[data-role='admin']"><a href="#">Administradores</a></li>
        </ul>
      </div>
      <ul class="js-filter uk-child-width-1-1 uk-child-width-1-2@s uk-child-width-1-3@l uk-child-width-1-4@xl uk-text-center uk-margin-medium-top" uk-grid>
        <% @users.order(:name).each do |user| %>
          <li data-role="<%= user.is_admin? ? "admin" : "user" %>">
          <%= link_to [:admin, user], class: "uk-link-reset" do %>
            <div class="uk-card <%= user.is_admin? ? "uk-card-secondary" : "uk-card-default" %> user-list-card">
              <div class="uk-card-header">
                <div class="uk-grid-small uk-flex-middle" uk-grid>
                  <div class="uk-width-auto uk-padding uk-padding-remove-horizontal">
                    <%= image_tag user.avatar_sized(:thumb), class: "uk-border-circle square-75 uk-margin-small-left"%>
                  </div>
                  <div class="uk-width-expand">
                    <h3 class="uk-card-title uk-margin-remove-bottom"><%= user.full_name %></h3>
                    <p class="uk-text-meta uk-margin-small-top">Alta: <time datetime="<%= user&.created_at %>"><%= user&.created_at&.strftime("%d-%m-%Y") %></time></p>
                  </div>
                </div>
              </div>
              <div class="uk-card-footer">
                <a href="#" class="uk-button uk-button-text">Read more</a>
              </div>
            </div>
            <%end%>
          </li>
        <%end%>
      </ul>
    </div>
    
  </div>
</div>
