<h1 class="uk-heading-divider uk-margin-small-left uk-margin-small-right"> Usuarios<%= remote_icon_link(new_admin_user_path, "plus", {:class=>"uk-align-right uk-margin-small-top"}) %></h1>

<div class="uk-padding-small">
  <%= search_form_for @q, url: admin_users_path, id: "admin_user_search", class:"uk-grid" do |f| %>
    <div class="uk-search uk-search-default uk-width-expand">
      <%= f.search_field :name_or_surname_cont, class: "uk-search-input", placeholder: "Buscar..." %>
    </div>
    <% if !@q.conditions.empty?%>
      <%= link_to "", admin_users_path, class: "uk-button uk-button-default uk-icon uk-width-auto  uk-padding-small uk-padding-remove-vertical", :"uk-icon" => "trash" %>
    <%end%>
    <%= link_to '', "#", onclick:"$('#admin_user_search').submit()", class:"uk-button uk-button-default uk-icon uk-width-auto  uk-padding-small uk-padding-remove-vertical", "uk-icon": "search"  %>
  <% end %>
</div>

<div class="uk-width-expand uk-padding-small">
  <div uk-filter="target: .js-filter">
    <div class="sticky-options uk-margin-small-left" uk-sticky="offset: 134">
      <ul class="uk-subnav uk-subnav-pill uk-margin-remove-left@s">
        <li class="uk-active" uk-filter-control><a href="#">Todos</a></li>
        <li uk-filter-control="[data-role='user']"><a href="#">Usuarios</a></li>
        <li uk-filter-control="[data-role='admin']"><a href="#">Admins</a></li>
      </ul>
    </div>
    <ul class="js-filter uk-child-width-1-1 uk-child-width-1-2@s uk-child-width-1-3@l uk-child-width-1-4@xl uk-text-center uk-margin-medium-top" uk-grid>
      <% @users.order(:name).each do |user| %>
        <li data-role="<%= user.is_admin? ? "admin" : "user" %>">
        <%= link_to [:admin, user], class: "uk-link-reset" do %>
          <div class="uk-card <%= user.is_admin? ? "uk-card-secondary" : "uk-card-default" %> user-list-card">
            <div class="uk-card-header">
              <div class="uk-grid-small uk-flex-middle" uk-grid>
                <div class="uk-width-auto uk-padding uk-padding-remove-horizontal">
                  <%= image_tag user.avatar.attached? ? user.avatar_sized(:thumb) : "users/avatar.png", class: "uk-border-circle square-75 uk-margin-small-left"%>
                </div>
                <div class="uk-width-expand">
                  <h3 class="uk-card-title uk-margin-remove-bottom"><%= user.full_name %></h3>
                  <p class="uk-text-meta uk-margin-small-top">Alta: <time datetime="<%= user&.created_at %>"><%= user&.created_at&.strftime("%d-%m-%Y") %></time></p>
                </div>
              </div>
            </div>
            <div class="uk-card-footer">
              <%= remote_link(edit_admin_user_path(user), "Editar", {:class=>"uk-button uk-button-text"}) %>
            </div>
          </div>
          <%end%>
        </li>
      <%end%>
    </ul>
  </div>
</div>
