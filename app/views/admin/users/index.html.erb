<div uk-filter="target: .js-filter">
  <div class="sticky-options" uk-sticky="offset: 132">
    <nav uk-navbar>
      <div class="nav-overlay uk-navbar-left">
        <ul class="uk-subnav uk-subnav-pill uk-margin-top">
          <li class="uk-active" uk-filter-control><a href="#"><span uk-icon="users"></span></a></li>
          <li uk-filter-control="[data-role='user']"><a href="#">Usuarios</a></li>
          <li uk-filter-control="[data-role='admin']"><a href="#">Admins</a></li>
        </ul>
      </div>
      <div class="nav-overlay uk-navbar-right">
        <a class="uk-navbar-toggle" uk-search-icon uk-toggle="target: .nav-overlay; animation: uk-animation-fade" href="#"></a>
      </div>
      <div class="nav-overlay uk-navbar-left uk-flex-1" hidden>
        <div class="uk-navbar-item uk-width-expand">
          <%= search_form_for @q, url: admin_users_path, id: "admin_user_search", class:"uk-search uk-search-navbar uk-width-1-1" do |f| %>
            <% if !@q.conditions.empty?%>
              <%= link_to "", admin_users_path, class: "uk-width-auto", :"uk-icon" => "trash" %>
            <%end%>
            <%= link_to '', "#", onclick:"$('#admin_user_search').submit()", class:"uk-width-auto", "uk-icon": "search"  %>
            <%= f.search_field :name_or_surname_cont, class: "uk-search-input small uk-width-2-3 uk-margin-left", placeholder: "Buscar..." %>
            
          <% end %>
        </div>
        <a class="uk-navbar-toggle" uk-close uk-toggle="target: .nav-overlay; animation: uk-animation-fade" href="#"></a>
      </div>
    </nav>
  </div>
  <div class="uk-width-expand uk-padding-small uk-padding-remove-top">
    <ul class="js-filter uk-child-width-1-1 uk-child-width-1-2@s uk-child-width-1-3@l uk-child-width-1-4@xl uk-text-center uk-margin-medium-top" uk-grid>
      <% @users.order(:name).each do |user| %>
        <li data-role="<%= user.is_admin? ? "admin" : "user" %>">
        <%= link_to [:admin, user], class: "uk-link-reset" do %>
          <div class="uk-card <%= user.is_admin? ? "uk-card-secondary" : "uk-card-default" %> user-list-card">
            <div class="uk-card-header">
              <div class="uk-grid-small uk-flex-middle" uk-grid>
                <div class="uk-width-auto uk-padding uk-padding-remove-horizontal">
                  <%= image_tag user.avatar.attached? ? user.avatar_sized(:thumb) : "users/avatar.png", class: "uk-border-circle square-75 uk-margin-small-left"%>
                </div>
                <div class="uk-width-expand">
                  <h3 class="uk-card-title uk-margin-remove-bottom"><%= user.full_name %></h3>
                  <p class="uk-text-meta uk-margin-small-top">Alta: <time datetime="<%= user&.created_at %>"><%= user&.created_at&.strftime("%d-%m-%Y") %></time></p>
                </div>
              </div>
            </div>
            <div class="uk-card-footer">
              <%= remote_link(edit_admin_user_path(user), "Editar", {:class=>"uk-button uk-button-text"}) %>
            </div>
          </div>
          <%end%>
        </li>
      <%end%>
    </ul>
  </div>
</div>
