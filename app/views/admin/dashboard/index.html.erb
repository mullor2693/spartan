<%= render partial: "shared/headers/profile_header", locals: {section_name: "Panel de Administración"}  %>
<div class="uk-child-width-1-3@m uk-grid-match" uk-grid>
    <% [
        ['Usuarios', "Acceso al sistema de gestion de usuarios.", admin_users_path],
        ['Nutrición', "Acceso al servicio de getion de alimentos y dietas.", admin_nutrition_path],
        ['Entrenamiento', "Acceso al servicio de gestion de ejercicios y entrenamientos.", admin_training_path]
    ].each do |link_url| %>
        <div>
        <%= link_to link_url[2], class:"uk-card uk-card-default uk-card-hover uk-card-body uk-link-reset" do %>
            <h3 class="uk-card-title"><%= link_url[0] %></h3>
            <p><%= link_url[1] %></p>
        <% end %>
        </div>
    <% end %>

    <div>
        <%= link_to authenticated_root_path, class:"uk-card uk-card-primary uk-card-hover uk-card-body uk-link-reset" do %>
        <h3 class="uk-card-title">Menu Principal</h3>
        <p>Acceso al servicio de usuario de la app.</p>
        <% end %>
    </div>

</div>

